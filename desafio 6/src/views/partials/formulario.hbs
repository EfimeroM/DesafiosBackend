<script>
    const addProduct = ()=>{
        const name = document.getElementById("name").value
        const price = document.getElementById("price").value
        const thumbnail = document.getElementById("thumbnail").value
        socket.emit("addProduct", {
            name,
            price,
            thumbnail
        })
        document.getElementById("name").value = ""
        document.getElementById("price").value = ""
        document.getElementById("thumbnail").value = ""
    }
</script>
<div id="form-content">
    <form onSubmit="addProduct();return false">
        <input type="text" name="name" placeholder="nombre" id="name">
        <br>
        <input type="text" name="price" placeholder="precio" id="price">
        <br>
        <input type="text" name="thumbnail" placeholder="url foto" id="thumbnail">
        <br>
        <button type="submit">AÃ±adir producto</button>
    </form>
</div>